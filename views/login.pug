extends empty

block content

	div

		form(class="form flexbox" action="/login" method="POST")

			.form__details.flexbox__item
				h1 Sign in

				label(class="form__label" for="email") Enter your email:
				input(class="form__input" type="email" name="email" id="email" autocomplete="username" autofocus)

				label(class="form__label" for="password") Enter your password:
				input(class="form__input" type="password" name="password" id="password" autocomplete="current-password")

				input(class="form__input button" type="submit" value="Log In")
					
				p Don't have an account? 
					a(href="/register") Register for free.

			.flexbox__item.unsplash
				img(class="form__img" src="/images/photos/anatomical-model.jpg" alt="")
				a(class="unsplash__link" href="https://unsplash.com/@cadop?utm_medium=referral&amp;utm_campaign=photographer-credit&amp;utm_content=creditBadge" target="_blank" rel="noopener noreferrer" title="Download free do whatever you want high-resolution photos from Mathew Schwartz" aria-hidden=true tabIndex=-1)
					span
						!=h.icon("unsplash")
						span Mathew Schwartz
		.info
			p You can 
				a(href="/account/forgot") reset your password here.